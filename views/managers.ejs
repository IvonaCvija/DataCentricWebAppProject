<body>
    <style>
        div {
            display: flex;
            flex-direction: column;
        }
        th,
        td {
            border: 1px solid #ddd;
            padding: 8px;
        }
    </style>
    <div>
        <h1>Managers</h1>
        
        <a href="/addManager">Add Manager</a>
        <table>
            <tr>
                <th>Manager ID</th>
                <th>Name</th>
                <th>Salary</th>
            </tr>
            <% managers.forEach((manager)=>
                { %>
                <tr>
                    <td><%= manager._id %></td>
                    <td><%= manager.name %></td>
                    <td><%= manager.salary %></td>
                </tr>
                <% }) %>
        </table>
        <a href="/">Home</a>
    </div>
</body>