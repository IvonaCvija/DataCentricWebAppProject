<body>
    <style>
        div {
            display: flex;
            flex-direction: column;
        }
        th,
        td {
            border: 1px solid #ddd;
            padding: 8px;
        }
    </style>
    <div>
        <h1>Products</h1>

        <table>
            <tr>
                <th>Product ID</th>
                <th>Describe</th>
                <th>Store ID</th>
                <th>Location</th>
                <th>Price</th>
            </tr>
            <% products.forEach((product)=>
                { %>
                <tr>
                    <td><%= product.pid %></td>
                    <td><%= product.productdesc %></td>
                    <td><%= product.sid %></td>
                    <td><%= product.location %></td>
                    <td><%= product.Price %></td>
                    <td>
                        <a href="/products/delete/<%= product.pid %>">Delete</a>
                    </td>
                </tr>
                <% }) %>
        </table>

        <a href="/">Home</a>
    </div>
</body>